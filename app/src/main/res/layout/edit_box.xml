<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="100px" />

        <View
            android:layout_width="319dp"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="80px"
            android:layout_marginRight="5dp"
            android:background="#87000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="15dp"
            android:textSize="60px"
            android:textColor="#000000"
            android:text="Number"
            android:layout_weight="6"/>

        <TextView
            android:id="@+id/edittext_dialog_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="15dp"
            android:textSize="60px"
            android:textColor="#000000"
            android:text="진행중"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edittext_dialog_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_marginLeft="15dp"
            android:hint="우선순위"
            android:layout_weight="7"/>


        <CheckBox
            android:id="@+id/editcheck_doalog_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:textSize="60px"
        android:textColor="#000000"
        android:text="List Name"/>

    <EditText
        android:id="@+id/edittext_dialog_list"
        android:layout_width="950px"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:layout_marginLeft="15dp"
        android:hint="리스트 이름" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:textSize="60px"
        android:textColor="#000000"
        android:text="Memo"/>

    <EditText
        android:id="@+id/edittext_dialog_memo"
        android:layout_width="950px"
        android:layout_height="278dp"
        android:layout_marginLeft="15dp"
        android:hint="메모를 입력하세요"
        android:textSize="50px" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_dialog_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#ffd200"
            android:textStyle="bold"
            android:textSize="60px"
            android:textColor="#ffffff"
            android:text="저장" />
    </LinearLayout>
</LinearLayout>